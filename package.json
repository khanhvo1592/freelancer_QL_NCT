{
  "name": "elder-manager-app",
  "version": "1.0.0",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^2.0.0",
    "wait-on": "^7.2.0"
  },
  "main": "electron/main.js",
  "scripts": {
    "start": "./node_modules/.bin/electron .",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && npm start",
    "dev:electron": "wait-on -t 30000 -v http://localhost:3000 http://localhost:5000 && cross-env NODE_ENV=development electron .",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "build": "cd frontend && npm run build",
    "prebuild": "rimraf frontend/build",
    "pack": "./node_modules/.bin/electron-builder --dir",
    "dist": "./node_modules/.bin/electron-builder",
    "build:portable": "npm run build && ./node_modules/.bin/electron-builder build --win portable",
    "postinstall": "cd frontend && npm install && cd ../backend && npm install"
  },
  "build": {
    "appId": "com.elder-manager.app",
    "productName": "Elder Manager",
    "files": [
      "electron/**/*",
      "node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": "backend",
        "to": "app/backend",
        "filter": [
          "**/*",
          "!node_modules/**/*"
        ]
      },
      {
        "from": "backend/node_modules",
        "to": "app/backend/node_modules",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "frontend/build",
        "to": "app/frontend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "frontend/public/app.ico",
        "to": "app.ico"
      }
    ],
    "directories": {
      "buildResources": "frontend/public",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "frontend/public/app.ico"
    },
    "portable": {
      "artifactName": "ElderManager.exe",
      "requestExecutionLevel": "user"
    },
    "asar": false,
    "compression": "maximum",
    "removePackageScripts": true
  },
  "dependencies": {
    "pdfmake": "^0.2.7",
    "react-to-print": "^3.0.5"
  }
}
