{
  "name": "elder-manager-app",
  "version": "1.0.0",
  "devDependencies": {
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^2.0.0"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "cd elder-manager && npm run build",
    "prebuild": "rimraf elder-manager/build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "electron-pack": "npm run build && electron-builder build --win",
    "postinstall": "cd elder-manager && npm install && cd ../elder-mgmt-be && npm install"
  },
  "build": {
    "appId": "com.elder-manager.app",
    "productName": "Elder Manager",
    "files": [
      "main.js",
      "elder-manager/build/**/*",
      "elder-manager/node_modules/**/*",
      "elder-mgmt-be/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "elder-manager/public",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "asar": false,
    "forceCodeSigning": false,
    "extraResources": [
      {
        "from": "elder-manager/build",
        "to": "elder-manager/build"
      }
    ]
  }
}
